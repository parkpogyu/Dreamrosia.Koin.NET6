{
    "HubUrl": "http://192.168.0.31/SynchronizeHub",
    "BotVersion": "1.0.0",
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft": "Warning",
            "Microsoft.Hosting.Lifetime": "Information"
        }
    },
    //For Serilog Configuration, refer https://codewithmukesh.com/blog/serilog-in-aspnet-core-3-1/
    "Serilog": {
        "MinimumLevel": {
            "Default": "Information",
            "Override": {
                "Microsoft": "Error",
                "Microsoft.Hosting.Lifetime": "Information",
                "System": "Information",
                "Quartz": "Information"
            }
        },
        "WriteTo": [
            {
                "Name": "Console",
                "Args": {
                    "outputTemplate": "[{Timestamp:yy-MM-dd HH:mm:ss.fff}]:[{Level:u3}] {Message:l}{NewLine:l}{Exception:l}"
                }
            },
            {
                "Name": "File",
                "Args": {
                    "outputTemplate": "[{Timestamp:yy-MM-dd HH:mm:ss.fff}]:[{Level:u3}] {Message:l}{NewLine:l}{Exception:l}"
                }
            }
        ],
        "Enrich": [
            "FromLogContext",
            "WithMachineName",
            "WithProcessId",
            "WithThreadId"
        ],
        "Properties": {
            "Application": "mining-bot"
        }
    }
}